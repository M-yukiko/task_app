<h3><%= image_tag 'techou.png', class: 'img' %> スケジュール新規追加</h3>

<% if flash.now[:notice] %>
      <p class="notice"><%= flash.now[:notice] %></p>
      <%= render 'shared/error_form', locals: { schedule: @schedule } %>
<% end %>


<%= form_with model: @schedule do |f| %>
      <table>
        <tr>
          <th><%= f.label :title ,"タイトル" %> <span class="f_column">※必須</th>
          <td><%= f.text_field :title, class: "form_check" %></td>
        </tr>
        <tr>
          <th><%= f.label :start ,"開始日" %> <span class="f_column">※必須</span></th>
          <td><%= f.date_field :start, class: "form_check"  %></td>
        </tr>
        <tr>
          <th><%= f.label :close ,"終了日" %> <span class="f_column">※必須</th>
          <td><%= f.date_field :close, class: "form_check"  %></td>
        </tr>
        <tr>
          <th><%= f.label :allday ,"終日" %></th>
          <td><%= f.check_box :allday, {:checked => false}, true, false %><br>終日の場合はチェック</p></td>
        </tr>
        <tr>
          <th><%= f.label :memo ,"スケジュールメモ" %></th>
          <td><%= f.text_area :memo, class: "form_check"  %></td>
        </tr>
      </table>
        <p><%= f.submit "登録完了する", class: "end_btn" %></p>
        <p><%= link_to "スケジュール一覧に戻る", schedules_path, class: "index-link" %></p>
<% end %>